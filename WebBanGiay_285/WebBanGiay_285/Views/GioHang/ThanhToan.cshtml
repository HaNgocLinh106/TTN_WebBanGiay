
@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<h2 class="text-center">Đơn hàng của bạn</h2>
<br />
<br />
<div class="container">
    @if (Model.Count > 0)
    {
        <table id="cart" class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:50%">Tên sản phẩm</th>
                    <th style="width:10%">Giá</th>
                    <th style="width:8%">Số lượng</th>
                    <th style="width:22%" class="text-center">Thành tiền</th>
                    <th style="width:10%"> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var it in Model)
                {
                    <tr>

                        <td data-th="Product">
                            <div class="row">
                                <div class="col-sm-2 hidden-xs">
                                    <img src="/Content/images/@it.Giay.LinkAnh" alt="" class="img-responsive" width="100">
                                </div>
                                <div class="col-sm-10">
                                    <h4 class="nomargin">@it.Giay.TenGiay</h4>
                                    <p>Size @it.Giay.Size</p>
                                </div>
                            </div>
                        </td>
                        <td data-th="Price">@it.Giay.DonGia đ</td>
                        <td data-th="Quantity">
                            <input class="form-control text-center" data-id="@it.Giay.MaGiay" value="@it.SoLuong" type="text">
                        </td>
                        <td data-th="Subtotal" class="text-center">@(it.Giay.DonGia * it.SoLuong) VNĐ</td>

                       
                    </tr>
                }


            </tbody>           
        </table>
    }
</div>
<div class="section group">
    <div class="col-md-12">
        @using (Html.BeginForm("ThanhToan", "GioHang", FormMethod.Post))
        {
            <div class="form-group">
                <label>Người nhận</label>
                <input name="shipName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <input name="mobile" class="form-control" />
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input name="address" class="form-control" />
            </div>
            <button type="submit" class="btn">Gửi đơn hàng</button>
        }
    </div>

</div>
