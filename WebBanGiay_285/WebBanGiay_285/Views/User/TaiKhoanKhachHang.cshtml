@model List<Model.ViewModel.GioHangOFViewModel>
@{
    ViewBag.Title = "TaiKhoanKhachHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<h2 class="text-center"> Tài khoản của bạn</h2>
<br />
<br />
<h5>Lịch sử mua hàng</h5>
<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:50%">Mã</th>
                <th style="width:10%">Đơn Giá</th>
                <th style="width:8%">Số lượng</th>
                <th style="width:22%" class="text-center">Ngày mua hàng</th>
                <th style="width:10%">Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var it in Model)
            {
            <tr>

                <td data-th="Product">
                    <div class="row">
                        <div class="col-sm-10">
                            <h4 class="nomargin">@it.MaGiay</h4>
                        </div>
                    </div>
                </td>
                <td data-th="Price">@it.DonGia </td>
                <td data-th="Price">@it.SoLuong </td>
                <td data-th="Price">@it.NgayThang </td>


            </tr>
            }


        </tbody>
       
    </table>
</div>

